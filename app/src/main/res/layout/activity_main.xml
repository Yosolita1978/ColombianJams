<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="co.yosola.colombianjams.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_navigation"
            style="@style/NavigationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Home" />

    </LinearLayout>

    <TextView
        android:id="@+id/app_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop"
        android:padding="@dimen/padding_text"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/textBackground"
        android:textSize="@dimen/text_AppName"
        app:fontFamily="casual" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/genres"
            style="@style/CategoryStyle"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/genre"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        <ImageView
            android:id="@+id/genres_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/playsong"
            android:padding="3dp"
            android:src="@drawable/musiciconbc" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/twenty_margin"
        android:layout_marginRight="@dimen/twenty_margin"
        android:layout_marginTop="@dimen/twenty_margin"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artists"
            style="@style/CategoryStyle"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/artist"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        <ImageView
            android:id="@+id/artist_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/playsong"
            android:padding="3dp"
            android:src="@drawable/musiciconbc" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allsongs"
            style="@style/CategoryStyle"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/allsongs"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />

        <ImageView
            android:id="@+id/allsongs_imag"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/playsong"
            android:padding="3dp"
            android:src="@drawable/musiciconbc" />

    </LinearLayout>

</LinearLayout>